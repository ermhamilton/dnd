<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Description", :description %></th>
			<th><%= casein_sort_link "Skill proficiencies", :skill_ids %></th>
			<th><%= casein_sort_link "Tool proficiencies", :tool_proficiencies %></th>
			<th><%= casein_sort_link "Languages", :languages %></th>
			<th><%= casein_sort_link "Equipment", :equipment %></th>
			<th><%= casein_sort_link "Feature", :feature %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% backgrounds.each do |background| %>
		<tr>
			<td><%= casein_table_cell_link background.name, casein_background_path(background) %></td>
			<td><%= casein_table_cell_link background.description, casein_background_path(background) %></td>
			<td><%= casein_table_cell_link background.skills.map(&:name).sort.join(", "), casein_background_path(background) %></td>
			<td><%= casein_table_cell_link background.tool_proficiencies, casein_background_path(background) %></td>
			<td><%= casein_table_cell_link background.languages, casein_background_path(background) %></td>
			<td><%= casein_table_cell_link background.equipment, casein_background_path(background) %></td>
			<td><%= casein_table_cell_link background.feature, casein_background_path(background) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_background_path(background), :method => :delete, :data => { :confirm => "Are you sure you want to delete this background?" }) %>
			</td>
		</tr>
	<% end %>
</table>